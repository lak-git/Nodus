{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "Nodus Emergency Response",
  "short_name": "Nodus",
  "description": "Field responder and command dashboard for coordinating emergency incidents across teams.",
  "lang": "en",
  "dir": "ltr",
  "id": "../",
  "start_url": "../",
  "scope": "../",
  "display": "standalone",
  "display_override": ["standalone", "window-controls-overlay"],
  "orientation": "portrait",
  "background_color": "#FAF3E8",
  "theme_color": "#800020",
  "categories": ["productivity", "utilities"],
  "icons": [
    {
      "src": "/pwa-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/pwa-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Create Incident Report",
      "short_name": "New Incident",
      "url": "/app/create-incident",
      "description": "Jump directly into the field reporting flow."
    },
    {
      "name": "Pending Reports",
      "short_name": "Review Reports",
      "url": "/app/pending-reports",
      "description": "Review unsynced reports before sending them upstream."
    }
  ]
}
